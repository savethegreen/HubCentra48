                                <MouseBinding MouseAction="LeftClick" Command="{Binding ICommand_Config}" CommandParameter="28"/>
                            </Grid.InputBindings>
                            <TextBlock Text="{Binding Calibration_From, StringFormat='{}{0}'}" Style="{StaticResource Config_TextBlock_02}"></TextBlock>
