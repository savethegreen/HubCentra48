                        <ColumnDefinition Width="100*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" >
                        <Grid.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding ICommand_Config}" CommandParameter="2"/>
                        </Grid.InputBindings>
