                    </Grid>

                    <Grid Grid.Column="2">

                        <Grid.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding ICommand_Config}" CommandParameter="6"/>
                        </Grid.InputBindings>
                        <TextBlock Text="{Binding Config[0].Positive_High, StringFormat='{}High  {0} '}" Style="{StaticResource Config_TextBlock_02}"></TextBlock>
                    </Grid>
                </Grid>
            </Grid>
