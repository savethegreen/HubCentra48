                        </Grid.InputBindings>
                        <TextBlock Text="{Binding Config[0].Threshold, StringFormat='{}Threshold : {0}% '}" Style="{StaticResource Config_TextBlock_02}"></TextBlock>
                    </Grid>
                </Grid>
            </Grid>
