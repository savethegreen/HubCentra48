                    <TextBlock Grid.Column="0" Text="SYSTEM" Style="{StaticResource Config_TextBlock_01}"></TextBlock>

                </Grid>
                <Grid Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding ICommand_Config}" CommandParameter="31"/>
                        </Grid.InputBindings>
                        <CheckBox  Content="SYSTEM 1"  IsEnabled="False" IsChecked="{Binding Config[0].SYSTEM1, Mode=OneWay}" Style="{StaticResource  System_CheckBoxStyle_01}"/>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding ICommand_Config}" CommandParameter="32"/>
                        </Grid.InputBindings>
                        <CheckBox  Content="SYSTEM 2"  IsEnabled="False" IsChecked="{Binding Config[0].SYSTEM2, Mode=OneWay}" Style="{StaticResource System_CheckBoxStyle_01}"/>
                    </Grid>
                    <Grid Grid.Column="2">
                        <Grid.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding ICommand_Config}" CommandParameter="33"/>
                        </Grid.InputBindings>
                        <CheckBox Content="SYSTEM 3"  IsEnabled="False" IsChecked="{Binding Config[0].SYSTEM3, Mode=OneWay}" Style="{StaticResource System_CheckBoxStyle_01}"/>
