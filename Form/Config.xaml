                        </Grid.InputBindings>
                        <CheckBox Content="SYSTEM 4"  IsEnabled="False" IsChecked="{Binding Config[0].SYSTEM4, Mode=OneWay}" Style="{StaticResource System_CheckBoxStyle_01}"/>
                    </Grid>
                </Grid>
            </Grid>
