                        </Grid.InputBindings>
                        <TextBlock Text="{Binding Config[0].Analysis_Intervals, StringFormat='{}Analysis Interval : {0} '}" Style="{StaticResource Config_TextBlock_02}"></TextBlock>
                    </Grid>

                    <Grid Grid.Column="4">

                        <Grid.InputBindings>
