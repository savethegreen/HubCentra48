                    <TextBlock Grid.Column="0" Text="MaximumTime" Style="{StaticResource Config_TextBlock_01}"></TextBlock>
                </Grid>
                <Grid Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="100*"/>
