<Window x:Class="HubCentra_A1.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HubCentra_A1"
        mc:Ignorable="d"        
        WindowStartupLocation="CenterScreen"
        Title="Loading" Height="350" Width="800" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Image Source="/Image/Loding.png" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        </Grid>

        <Grid Grid.Row="1">
            <ProgressBar x:Name="ProgressBar" Height="30" Margin="5" />
        </Grid>

        <Grid Grid.Row="2">
            <TextBlock Foreground="Black" FontSize="20" Text="{Binding Loading_formLoadingProgress}"></TextBlock>
        </Grid>
    </Grid>
</Window>
